{
    "name": "austomos/chaster-app-php",
    "type": "library",
    "autoload": {
        "psr-4": {
            "ChasterApp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ChasterApp\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.1",
        "guzzlehttp/guzzle": "^7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3"
    },
    "scripts": {
        "check": "phpcs src --standard=PSR12 -sp",
        "fix": "phpcbf src --standard=PSR12 -p",
        "test": "phpunit tests"
    }
}
